{
    "name": "diablomedia/zendframework1-filter-input",
    "description": "Zend Framework 1 Filter_Input component",
    "type": "library",
    "keywords": [
        "framework",
        "zf1"
    ],
    "homepage": "http://framework.zend.com/",
    "license": "BSD-3-Clause",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "php": "~8.0.0 || ~8.1.0 || ~8.2.0 || ~8.3.0 || ~8.4.0",
        "diablomedia/zendframework1-loader": "dev-php84 as 1.0.5",
        "diablomedia/zendframework1-registry": "dev-php84 as 1.0.5",
        "diablomedia/zendframework1-translate": "dev-php84 as 1.0.5",
        "diablomedia/zendframework1-validate": "dev-php84 as 1.0.5",
        "diablomedia/zendframework1-filter": "dev-php84 as 1.0.6"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/tipee-sa/zendframework1-validate"
        },
        {
            "type": "vcs",
            "url": "https://github.com/tipee-sa/zendframework1-filter"
        }
    ],
    "autoload": {
        "classmap": [
            "src/Zend/Filter/Input.php"
        ]
    },
    "autoload-dev": {
        "psr-0": {
            "Zend_": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6.19 || ^10.5.18",
        "phpstan/phpstan": "2.1.1",
        "friendsofphp/php-cs-fixer": "3.66.2",
        "maglnet/composer-require-checker": "^3.0.0",
        "phpro/grumphp-shim": "^2.0.0"
    },
    "include-path": [
        "src/"
    ],
    "archive": {
        "exclude": [
            "/tests"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "test-with-coverage": "phpunit --coverage-clover=clover.xml",
        "phpstan": "phpstan analyze -c phpstan.neon --no-progress --ansi",
        "style-check": "php-cs-fixer fix --dry-run -vv"
    },
    "config": {
        "allow-plugins": {
            "phpro/grumphp-shim": true
        }
    }
}
